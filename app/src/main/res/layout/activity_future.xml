<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".FutureActivity"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation_drawer"
        android:orientation="vertical"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/nav_drawer"
        android:fitsSystemWindows="true">

        <CheckedTextView
            android:id="@+id/drawer_read"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="@dimen/nav_item_padding_start"
            android:paddingLeft="@dimen/nav_item_padding_start"
            android:gravity="start|center_vertical"
            android:background="@drawable/nav_item_background"
            android:textSize="@dimen/nav_item_text_size"
            android:text="@string/read"
            android:drawableStart="@drawable/ic_book"
            android:drawableLeft="@drawable/ic_book"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primary_color" />

        <CheckedTextView
            android:id="@+id/drawer_calendar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="@dimen/nav_item_padding_start"
            android:paddingLeft="@dimen/nav_item_padding_start"
            android:gravity="start|center_vertical"
            android:background="@drawable/nav_item_background"
            android:textSize="@dimen/nav_item_text_size"
            android:text="@string/calendar"
            android:drawableStart="@drawable/ic_calendar"
            android:drawableLeft="@drawable/ic_calendar"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primary_color" />

        <CheckedTextView
            android:id="@+id/drawer_about"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="@dimen/nav_item_padding_start"
            android:paddingLeft="@dimen/nav_item_padding_start"
            android:gravity="start|center_vertical"
            android:background="@drawable/nav_item_background"
            android:textSize="@dimen/nav_item_text_size"
            android:text="@string/about"
            android:drawableStart="@drawable/ic_about"
            android:drawableLeft="@drawable/ic_about"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primary_color" />

        <CheckedTextView
            android:id="@+id/drawer_connect"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="@dimen/nav_item_padding_start"
            android:paddingLeft="@dimen/nav_item_padding_start"
            android:gravity="start|center_vertical"
            android:background="@drawable/nav_item_background"
            android:textSize="@dimen/nav_item_text_size"
            android:text="@string/connect"
            android:drawableStart="@drawable/ic_connect"
            android:drawableLeft="@drawable/ic_connect"/>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
